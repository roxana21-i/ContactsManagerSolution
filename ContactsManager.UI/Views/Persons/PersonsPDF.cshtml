@model IEnumerable<PersonResponse>
@{
    Layout = null;
}

<link href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")" rel="stylesheet"/>

<div class="table-container">
    <h1>Persons</h1>
    <table class="table w-100 mt persons">
        <thead>
            <tr>
                <th>Person Name</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Country</th>
                <th>Address</th>
                <th>Receive Newsletter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <td style="width:15%">@person.PersonName</td>
                    <td style="width:20%">@person.Email</td>
                    <td style="width:13%">@person.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                    <td style="width:9%">@person.Age</td>
                    <td style="width:9%">@person.Gender</td>
                    <td style="width:10%">@person.CountryName</td>
                    <td style="width:20%">@person.Address</td>
                    <td style="width:10%">@person.ReceiveNewsletter</td>
                </tr>
            }
        </tbody>
    </table>

</div>

